                    @*             <div class="medication-upload-preview" id="imagePreview"> *@
                    @*                 @* <img src="@Url.Content("~/Images/" + (string.IsNullOrEmpty(Model.ImageName) ? "OIP.jpg" : Model.ImageName))" ... /> *@ 
                    @*                 @if (Model.ImageName is not null) *@
                    @*                 { *@
                    @*                     <img src="~/Images/ImageName" alt="ImageName" class="img-fluid rounded" /> *@

                    @*                 } *@
                    @*                 else *@
                    @*                 { *@
                    @*                     <img src="~/OIP.png" alt="Photo" class="img-fluid rounded" /> *@

                    @*                 } *@
                    @*             </div> *@
                    @*             <input asp-for="Image" type="file" class="form-control visually-hidden" id="ImageFile" accept="image/*"> *@
                    @*         </div> *@
                    @*         <p class="text-muted small">Upload a new image or keep the existing one</p> *@
                    @*     </div> *@
                    @* </div> *@

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>