@model UserToReturnViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashbordForAdmin.cshtml";
}

<main class="flex-grow-1">
    <div class="container py-4 py-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Edit User</h1>
            <a asp-action="Index"  class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Back to Dashboard
            </a>
        </div>

        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Edit User Information</h5>
                <p class="text-muted mb-0">Update information for this User</p>
            </div>
            <div class="card-body">


                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input asp-for="Id" type="hidden"  />
                    <input asp-for="ImageName" type="hidden" id="Id"  />

                    @*User Image*@
                    <!-- Pharmacy Image -->
                    <div class="text-center mb-4">
                        <div class="position-relative d-inline-block">
                            <div class="pharmacy-image-container editable">
                                <img src="@Url.Content("~/Images/" + (string.IsNullOrEmpty(Model.ImageName) ? "default-avatar.jpg" : $"Profiles/{Model.ImageName}"))" alt="Model.ImageName" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                                <div class="pharmacy-image-overlay" id="triggerFileUpload">
                                    <i class="bi bi-camera fs-3"></i>
                                </div>
                                <input asp-for="Image" type="file" id="profileImage" class="visually-hidden" />
                            </div>
                        </div>
                    </div>
                    

                    <div class="mb-3">
						<label asp-for="NameOfPharmacy" class="form-label">Pharmacy Name</label>
                        <input asp-for="NameOfPharmacy" type="text" class="form-control" id="Name" required>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="OwnerName" class="form-label">Owner Name</label>
                            <input asp-for="OwnerName" type="text" class="form-control" id="Price" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="Quantity" name="Email" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" id="Description" type="text" class="form-control"  required>
                    </div>

