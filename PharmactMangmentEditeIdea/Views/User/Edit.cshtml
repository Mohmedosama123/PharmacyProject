@model UserToReturnViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="flex-grow-1">
    <div class="container py-4 py-md-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Edit Medication</h1>
            <a asp-action="Index"  class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Back to Dashboard
            </a>
        </div>

        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">Edit Medication Details</h5>
                <p class="text-muted mb-0">Update information for this medication</p>
            </div>
            <div class="card-body">


                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input asp-for="Id" type="hidden"  />
                    <input asp-for="ImageName" type="hidden" id="Id"  />


                    

                    <div class="mb-3">
						<label asp-for="NameOfPharmacy" class="form-label">Pharmacy Name</label>
                        <input asp-for="NameOfPharmacy" type="text" class="form-control" id="Name" required>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="OwnerName" class="form-label">Owner Name</label>
                            <input asp-for="OwnerName" type="text" class="form-control" id="Price" required>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="Quantity" name="Email" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" id="Description" type="text" class="form-control"  required>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">User Image</label>
                        <div class="d-flex flex-column align-items-center">
                            <div class="position-relative medication-upload-container mb-2">
                                <div class="medication-upload-preview" id="imagePreview">
                                    <img src="@Url.Content("~/Images/" + (string.IsNullOrEmpty(Model.ImageName) ? "OIP.jpg" : Model.ImageName))" ... />
                                </div>
                                <input asp-for="Image" type="file" class="form-control visually-hidden" id="ImageFile" accept="image/*">
                            </div>
                            <p class="text-muted small">Upload a new image or keep the existing one</p>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>