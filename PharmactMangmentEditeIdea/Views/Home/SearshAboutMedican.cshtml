        <div class="search-container">
            <!-- Hero section with search form -->
            <div class="search-hero mb-5 rounded-3 shadow-lg">
                <div class="position-relative z-10">
                    <div class="animate-fade-in-down">
                        <h1 class="h2 mb-2 text-white">Find Your Medications</h1>
                        <p class="text-white-muted mb-4">
                            Search for medications by name and location to find pharmacies that have what you need.
                        </p>
                    </div>

                    <div class="search-form-container animate-fade-in-up">
                        <form method="get" class="search-form bg-white-10 backdrop-blur-sm border-white-20 rounded-3 p-4">
                            <div class="mb-3">
                                <label for="medication" class="form-label text-white d-flex align-items-center">
                                    <i class="bi bi-capsule me-2"></i>
                                    Medication Name
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="medication" name="medication" placeholder="Enter medication name">
                                    <button type="button" class="btn btn-outline-light" id="voice-search-btn">
                                        <i class="bi bi-mic"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="governorate" class="form-label text-white d-flex align-items-center">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        Governorate
                                    </label>
                                    <select class="form-select" id="governorate" name="governorate">
                                        <option value="">Select governorate</option>
                                        <option value="Cairo">Cairo</option>
                                        <option value="Alexandria">Alexandria</option>
                                        <option value="Giza">Giza</option>
                                        <option value="Luxor">Luxor</option>
                                        <option value="Aswan">Aswan</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="district" class="form-label text-white d-flex align-items-center">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        District
                                    </label>
                                    <select class="form-select" id="district" name="district" disabled>
                                        <option value="">Select governorate first</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="center" class="form-label text-white d-flex align-items-center">
                                    <i class="bi bi-building me-2"></i>
                                    Center/Area
                                </label>
                                <select class="form-select" id="center" name="center" disabled>
                                    <option value="">Select district first</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-2"></i>
                                Search
                            </button>
                        </form>
                    </div>
                </div>
            </div>

