@model AddMedadicineByAdminViewModel
@{
    ViewData["Title"] = "EditMedication";
    Layout = "~/Views/Shared/_DashbordForAdmin.cshtml";
}


<!-- Main Content -->
<main class="flex-grow-1">
    <!-- Content will be replaced -->
    <div class="container py-4">

@*================= add new medicin ================*@

<div class="tab-pane " id="add-tab-pane" role="tabpanel" aria-labelledby="add-tab" tabindex="0">
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0"> Add New Medication </h5>
            <p class="text-muted mb-0"> Edit a new medication In inventory </p>
        </div>
        <div class="card-body">
            <form asp-action="EditMedication" enctype="multipart/form-data">
                        @*check condation *@
                        @*فيه صوره ولا لا في التحديث*@
                        <input asp-for="ImageName" hidden />

                        <div class="text-center mb-4">
                            <div class="position-relative d-inline-block">
                                <div class="pharmacy-image-container editable">
                                    <img src="@Url.Content("~/Images/" + (string.IsNullOrEmpty(Model.ImageName) ? "Medications/OIP.png" : $"Medications/{Model.ImageName}"))" alt="Model.ImageName" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                                    <div class="pharmacy-image-overlay" id="triggerFileUpload">
                                        <i class="bi bi-camera fs-3"></i>
                                    </div>
                                    <input asp-for="Imags" type="file" id="profileImage" class="visually-hidden" />
                                </div>
                            </div>
                        </div>

                <div class="mb-3">
                    <label for="Name" asp-for="Name" class="form-label">Medication Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="Name" name="Name" required>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="row mb-3">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label for="Price" asp-for="Price" class="form-label">Price (EGP)</label>
                        <input type="number" asp-for="Price" class="form-control" id="Price" name="Price" min="0" step="0.01" required>
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                    <div class="col-md-6">
                        <label for="Category" asp-for="Category" class="form-label">Category</label>
                        <input type="text" asp-for="Category" class="form-control" id="Quantity"  required>
                        <span asp-validation-for="Category" class="text-danger"></span>

                    </div>
                </div>

                <div class="mb-3">
                    <label for="Description" asp-for="Description" class="form-label">Description</label>
                    <textarea class="form-control" asp-for="Description" id="Description" name="Description" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary w-100">Add Medication</button>
                <a asp-action="Index" class="mt-4 btn btn-dark w-100 ">Back to List</a>

            </form>


        </div>
    </div>
</div>

    </div>
</main>
@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


