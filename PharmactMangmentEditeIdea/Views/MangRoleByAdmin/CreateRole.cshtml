@model RoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    // Layout = "~/Views/Shared/_DashbordForAdmin.cshtml";
}

<!-- Main Content -->
<main class="flex-grow-1">
    <!-- Content will be replaced -->
    <div class="container py-4">

        @*================= add new medicin ================*@
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
            <div>
                <h1 class="h2 mb-1">Admin Dashboard</h1>
                <p class="text-muted">Manage your Role information</p>
            </div>
        </div>

        <div class="tab-pane " id="add-tab-pane" role="tabpanel" aria-labelledby="add-tab" tabindex="0">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"> Add New Role </h5>
                    <p class="text-muted mb-0"> Creat Role of User</p>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRole">
                        <div class="mb-3">
                            <label  asp-for="Name" class="form-label">Role Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="Name" required>
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>

                        <button type="submit" class="btn btn-primary w-100">Add Role</button>
                        <a asp-action="IndexRole" class="mt-4 btn btn-dark w-100 ">Back to List</a>

                    </form>


                </div>
            </div>
        </div>

    </div>
</main>
@section ValidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


