<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Medication Search System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <!-- Navigation: Main site navigation bar -->
        <header class="sticky-top navbar-container">
            <div class="container">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="index.html">MedSearch</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link active" href="index.html">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="SearshAboutMedican">Search</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="chatbot.html">Chatbot</a>
                                </li>
                            </ul>
                            <div class="d-flex">
                                <div class="theme-toggle me-2">
                                    <button class="btn btn-outline-secondary btn-sm" id="theme-toggle">
                                        <i class="bi bi-sun-fill" id="light-icon"></i>
                                        <i class="bi bi-moon-fill d-none" id="dark-icon"></i>
                                    </button>
                                </div>
                                <a href="pharmacy-login.html" class="btn btn-primary btn-sm">
                                    <i class="bi bi-person-lock me-1"></i>
                                    Pharmacy Login
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-grow-1">
            <!-- Content will be replaced -->
            @* <div class="container py-4"> *@
            @RenderBody()

            @* </div> *@
        </main>

        <!-- Footer: Site footer with links and contact information -->
        <footer class="border-top py-4 mt-auto">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-4 mb-md-0">
                        <h5>MedSearch</h5>
                        <p class="text-muted small">Find medications at nearby pharmacies quickly and easily.</p>
                    </div>
                    <div class="col-md-4 mb-4 mb-md-0">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="index.html" class="text-decoration-none text-muted">Home</a></li>
                            <li><a href="search.html" class="text-decoration-none text-muted">Search Medications</a></li>
                            <li><a href="pharmacy-login.html" class="text-decoration-none text-muted">Pharmacy Login</a></li>
                            <li><a href="chatbot.html" class="text-decoration-none text-muted">Chatbot</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5>Contact</h5>
                        <address class="text-muted small">
                            <p>Email: info@medsearch.com</p>
                            <p>Phone: +20 123 456 7890</p>
                        </address>
                    </div>
                </div>
                <div class="border-top pt-3 mt-3 text-center text-muted small">
                    <p>&copy; <span id="current-year">2023</span> Medication Search System. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>  *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>  *@
    @* <script src="~/js/site.js" asp-append-version="true"></script>  *@
    @await RenderSectionAsync("ValidationScripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
    <script>
        document.getElementById('current-year').textContent = new Date().getFullYear();
    </script>


</body>
</html>