@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="flex-grow-1 bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">

                        


                        <div class="card-body">
                            <h2 class="text-center mb-4">Pharmacy Portal</h2>
                            <p class="text-muted text-center mb-4">Access your pharmacy dashboard to manage medications</p>
                            <form asp-action="ResetPassword" method="post">
                               
                                <div >
                                    <div >
                                        <label asp-for="Password" class="form-label"></label>
                                        <input asp-for="Password" class="form-control" placeholder="New Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>


                                

                                <div class="d-grid mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-person-plus me-2"></i>
                                        Reset Password
                                    </button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


